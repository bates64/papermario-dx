root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yaml,yml,nix,clang-tidy,clangd}]
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab

[*.msg]
indent_style = tab

[*.lock]
indent_style = unset
indent_size = unset
